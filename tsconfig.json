{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"types": ["node", "@types/jest"],
		"typeRoots": ["./node_modules/@types"],
		"strictNullChecks": true
	},
	"include": ["src/**/*"],
	"exclude": ["src/**/*.spec.ts"]
}
